
    
 # Clean up from any previous run of this file
  delete module flaviviridaeRaxmlPhylogenyGeneratorProt
  delete module alignmentColumnsSelectorFlaviPesti
  delete module alignmentColumnsSelectorHepaciPegi
  delete module alignmentColumnsSelectorFlaviLike
  delete module alignmentColumnsSelectorPestiLike
  
  # Create all the modules we need
  create module -f modules/core/flaviviridaeRaxmlPhylogenyGeneratorProt.xml
  create module -f modules/core/phylogeny/alignmentColumnsSelectorFlaviPesti.xml
  create module -f modules/core/phylogeny/alignmentColumnsSelectorHepaciPegi.xml
  create module -f modules/core/phylogeny/alignmentColumnsSelectorFlaviLike.xml
  create module -f modules/core/phylogeny/alignmentColumnsSelectorPestiLike.xml

  # Create the phylogenies
  module flaviviridaeRaxmlPhylogenyGeneratorProt

    generate amino-acid phylogeny AL_TREE_FlaviPesti -s alignmentColumnsSelectorFlaviPesti \
      -w "fLocNotes.featureLoc.feature.name = 'whole_genome' and fLocNotes.ref_nt_coverage_pct >= 40" \
      -o trees/major-lineage/major1_flavipesti.tre NEWICK_BOOTSTRAPS

    generate amino-acid phylogeny AL_TREE_HepaPegi -s alignmentColumnsSelectorHepaciPegi \
      -w "fLocNotes.featureLoc.feature.name = 'whole_genome' and fLocNotes.ref_nt_coverage_pct >= 40" \
      -o trees/major-lineage/major1_hepapegi.tre NEWICK_BOOTSTRAPS

    generate amino-acid phylogeny AL_TREE_FlaviLike -s alignmentColumnsSelectorFlaviLike \
      -w "fLocNotes.featureLoc.feature.name = 'whole_genome' and fLocNotes.ref_nt_coverage_pct >= 40" \
      -o trees/major-lineage/major1_flavilike.tre NEWICK_BOOTSTRAPS

    generate amino-acid phylogeny AL_TREE_PestiLike -s alignmentColumnsSelectorPestiLike \
      -w "fLocNotes.featureLoc.feature.name = 'whole_genome' and fLocNotes.ref_nt_coverage_pct >= 40" \
      -o trees/major-lineage/major1_pestilike.tre NEWICK_BOOTSTRAPS


    exit

